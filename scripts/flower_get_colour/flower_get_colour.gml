function flower_get_colour(flowerId){

	switch (flowerId) {
		case flower.lapis_radiance: return bgr($1f3aad);break;
		case flower.scarlet_fawn: return bgr($aa2626);break;
		case flower.fuchsia_lily: return bgr($be5996);break;
		case flower.amber_trillium: return bgr($df7925);break;
		case flower.sun_violet: return bgr($effa6f);break;
		case flower.cloud_daisy: return bgr($ffffff);break;
		case flower.aquamarine_star: return bgr($00d4f5);break;
		case flower.summer_floral: return bgr($69cd50);break;
		case flower.rose_sunflower: return bgr($e835cf);break;
		case flower.violet_lily: return bgr($743dbd);break;	
	}

}